@model IEnumerable<VOD.Models.Aktorzy>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Aktorzy
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Daneosobowe.Imie) @Html.DisplayFor(modelItem => item.Daneosobowe.Nazwisko)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AktorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AktorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AktorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
